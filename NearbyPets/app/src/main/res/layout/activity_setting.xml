<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context="com.nearbypets.activities.SettingActivity">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/formSettings"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.nearbypets.views.RobotoMediumTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="14dp"
                android:text="Classified Ad Page Size"
                android:textColor="@color/tirnaryText" />

            <EditText
                android:id="@+id/txtPageSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:hint="Page Size"
                android:inputType="number"
                android:text="10" />

            <com.nearbypets.views.RobotoMediumTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="14dp"
                android:text="Facebook Ad Page Size"
                android:textColor="@color/tirnaryText" />

            <EditText
                android:id="@+id/txtFbAd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:hint="Page Size"
                android:inputType="number"
                android:text="5" />

            <com.nearbypets.views.RobotoMediumTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="14dp"
                android:text="Radius in Km"
                android:textColor="@color/tirnaryText" />

            <EditText
                android:id="@+id/txtRadius"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:hint="Radius"
                android:inputType="number"
                android:text="10000" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="14dp"
                android:background="@drawable/button_custom"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:text="Save Settings"
                android:textColor="@android:color/white" />
            <!--<Switch
                android:id="@+id/printKOT"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="6dp"
                android:text="Hide Ads"
                android:textColor="@color/primaryText"
                android:textSize="18sp" />-->
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
