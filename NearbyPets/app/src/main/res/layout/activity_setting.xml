<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context="com.nearbypets.activities.SettingActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.nearbypets.views.RobotoMediumTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="14dp"
                android:text="Classified Ad Page Size"
                android:textColor="@color/tirnaryText" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:hint="Page Size"
                android:inputType="number"
                android:text="10" />

            <com.nearbypets.views.RobotoMediumTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="14dp"
                android:text="Facebook Ad Page Size"
                android:textColor="@color/tirnaryText" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:hint="Page Size"
                android:inputType="number"
                android:text="5" />

            <com.nearbypets.views.RobotoMediumTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="14dp"
                android:text="Radius in Km"
                android:textColor="@color/tirnaryText" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:hint="Radius"
                android:inputType="number"
                android:text="10000" />

            <!--<Switch
                android:id="@+id/printKOT"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="6dp"
                android:text="Hide Ads"
                android:textColor="@color/primaryText"
                android:textSize="18sp" />-->
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
